enum ActivityType {
  MINE
  DELIVER
  BUILD
  SCUTTLE
  SALVAGE
}

model Activity {
  id               String         @id @default(cuid())
  type             ActivityType
  data             Json
  endTime          DateTime
  activityWorkerId String         @unique
  ActivityWorker   ActivityWorker @relation(fields: [activityWorkerId], references: [id])
}
