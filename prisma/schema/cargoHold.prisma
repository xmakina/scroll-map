enum CargoType {
  ENERGY_CELL
  ALLOY
  ICE
  ORE
  GAS
  HYDROGEN
  HELIUM
  MICROCHIP
  HULL_PART
  ANTIMATTER
  ENGINE_PART
  WATER
  FOOD
  MEDICAL_SUPPLY
  BIOWASTE
  BIOMASS
}

model CargoContainer {
  id          String    @id @default(cuid())
  type        CargoType
  data        Json?
  amount      Int
  cargoHoldId String
  CargoHold   CargoHold @relation(fields: [cargoHoldId], references: [id])
}

model CargoHold {
  id String @id @default(cuid())

  data            Json?
  Station         Station?
  Ship            Ship?
  Outpost         Outpost?
  CargoContainers CargoContainer[]
}
