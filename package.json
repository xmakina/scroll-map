{
  "name": "traders-galaxy",
  "version": "0.0.1",
  "scripts": {
    "prisma-force": "prisma db push --force-reset --accept-data-loss",
    "dev": "npm run prisma-force && next dev",
    "build": "prisma generate && next build --experimental-build-mode compile",
    "build:full": "prisma generate && cross-env DATABASE_URL=mysql://test_user:test_password@localhost:3306/build npm run §Build",
    "§Build": "npm run §SetupBuild && npm run §RunBuild && npm run §TearDownBuild",
    "§RunBuild": "prisma db push --force-reset && next build --experimental-build-mode compile",
    "§SetupBuild": "docker compose --file docker-compose.integration.yml up --build --detach --wait build-mysql",
    "§TearDownBuild": "docker compose --file docker-compose.integration.yml down build-mysql --volumes",
    "build-storybook": "storybook build",
    "start": "prisma migrate deploy && next start",
    "lint": "next lint && npx tsc --noEmit",
    "prepare": "husky",
    "prisma": "prisma generate && prisma format",
    "storybook": "storybook dev -p 6006",
    "test": "jest --selectProjects unit",
    "test:integration": "cross-env DATABASE_URL=mysql://test_user:test_password@localhost:3306/integrations npm run §IntegrationTests",
    "test:storybook": "npm run §SetupStorybook && npm run §RunStorybookTests && npm run §TearDownStorybook",
    "test:all": "npm run test:storybook && npm run test && npm run test:integration",
    "§IntegrationTests": "npm run §SetupIntegrations && npm run §RunIntegrationTestSuite && npm run §TearDownIntegrations",
    "§SetupIntegrations": "docker compose --file docker-compose.integration.yml up --build --detach --wait test-mysql test-phpmyadmin",
    "§TearDownIntegrations": "docker compose --file docker-compose.integration.yml down test-mysql test-phpmyadmin --volumes",
    "§RunIntegrationTestSuite": "prisma db push --force-reset && prisma db seed && jest -i --selectProjects integration",
    "§SetupStorybook": "docker compose --file docker-compose.integration.yml up --build --detach --wait storybook",
    "§TearDownStorybook": "docker compose --file docker-compose.integration.yml down storybook --volumes",
    "§RunStorybookTests": "test-storybook",
    "up": "docker compose up -d --build --wait && open-cli http://localhost:3000/",
    "down": "docker compose down --volumes"
  },
  "author": "Alex Addams <github@xmakina.co.uk>",
  "license": "ISC",
  "description": "A space trading adventure game for mobile",
  "prisma": {
    "seed": "tsx ./prisma/seed.ts",
    "schema": "./prisma/schema"
  },
  "dependencies": {
    "@adamscybot/react-leaflet-component-marker": "^2.0.3",
    "@auth/prisma-adapter": "^2.7.4",
    "@prisma/client": "^6.11.0",
    "bcrypt": "^5.1.1",
    "clsx": "^2.1.1",
    "leaflet": "^1.9.4",
    "leaflet-defaulticon-compatibility": "^0.1.2",
    "next": "^15.1.6",
    "next-auth": "5.0.0-beta.25",
    "next-intl": "^3.26.5",
    "rand-seed": "^2.1.7",
    "react": "^19.1.0",
    "react-countdown": "^2.3.6",
    "react-dom": "^19.1.0",
    "react-icons": "^5.3.0",
    "react-leaflet": "^5.0.0",
    "react-spinners": "^0.17.0",
    "unique-names-generator": "^4.7.1",
    "use-debounce": "^10.0.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.2",
    "@eslint/js": "^9.16.0",
    "@next/eslint-plugin-next": "^15.0.4",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-onboarding": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/jest": "^0.2.2",
    "@storybook/nextjs": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@storybook/test-runner": "^0.20.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/leaflet": "^1.9.18",
    "@types/node": "20.17.57",
    "@types/react": "19.0.1",
    "@types/react-dom": "19.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.16.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-storybook": "^0.11.1",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-theories": "^1.5.1",
    "moq.ts": "^10.0.8",
    "open-cli": "^8.0.0",
    "postcss": "^8",
    "prisma": "^6.11.0",
    "storybook": "^8.4.7",
    "storybook-react-context": "^0.7.0",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "typescript-eslint": "^8.17.0",
    "uuid": "^11.0.3"
  }
}
